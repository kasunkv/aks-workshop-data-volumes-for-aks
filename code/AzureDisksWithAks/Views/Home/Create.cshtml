
@{
    ViewData["Title"] = "Create";
}
@model  FileCreateViewModel

<div class="text-center">
    <h1 class="display-4">Create File</h1>
    <p>Click <b>Create File</b> button to create a file with a random name and content in a data volume.</p>
    <br />
    <form asp-controller="Home" asp-action="CreateFile" asp-antiforgery="false" method="post" class="">
        <button type="submit" class="btn btn-outline-primary btn-block">Create File</button>
    </form>

    <hr />

    @if (Model.IsSuccess)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>@Model.FileName</strong> was created successfully.
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
</div>

